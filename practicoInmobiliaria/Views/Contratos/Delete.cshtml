@model practicoInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Eliminar Contrato";
}

<h2>Eliminar Contrato</h2>

<h4>¿Estás seguro de que deseas eliminar este contrato?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdContrato</dd>

        <dt class="col-sm-2">Propietario</dt>
        <dd class="col-sm-10">@Model.NombrePropietario</dd>

        <dt class="col-sm-2">Inquilino</dt>
        <dd class="col-sm-10">@Model.NombreInquilino</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">$@Model.Monto</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IdContrato" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

