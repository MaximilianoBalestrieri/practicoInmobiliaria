@model List<practicoInmobiliaria.Models.Inquilino>
@{
    ViewData["Title"] = "Inquilinos";
}
<h2>Inquilinos</h2>

<!-- Botón para agregar un nuevo inquilino -->
<a href="@Url.Action("Create", "Inquilinos")" class="btn btn-primary">Agregar Inquilino</a>

@* Mostrar mensaje si hay algún error o éxito *@
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Contacto</th>
                <th>Acciones</th>  <!-- Nueva columna para las acciones -->
            </tr>
        </thead>
        <tbody>

            @foreach (var inquilino in Model)
            {
                <tr>
                    <td>@inquilino.IdInquilino</td>
                    <td>@inquilino.DniInquilino</td>
                    <td>@inquilino.ApellidoInquilino</td>
                    <td>@inquilino.NombreInquilino</td>
                    <td>@inquilino.ContactoInquilino</td>
                    <td>
                        <!-- Botón para editar -->
                        <a href="@Url.Action("Edit", "Inquilinos", new { id = inquilino.IdInquilino })" class="btn btn-warning">Editar</a>

                        <!-- Botón para eliminar -->
                        <a href="@Url.Action("Delete", "Inquilinos", new { id = inquilino.IdInquilino })" class="btn btn-danger" ;">Eliminar</a>
                        <!-- <a href="@Url.Action("Delete", "Inquilinos", new { id = inquilino.IdInquilino })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este inquilino?');">Eliminar</a> -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay inquilinos disponibles para mostrar.</p>
}
